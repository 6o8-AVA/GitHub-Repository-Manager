{
  "name": "github-repository-manager",
  "displayName": "GitHub Repository Manager",
  "description": "Easily and quickly clone public and private repositories",
  "version": "0.1.0",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "start": "yarn watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "keywords": [
    "github",
    "repository",
    "manager",
    "clone",
    "cloner",
    "auth",
    "token",
    "oauth"
  ],
  "dependencies": {
    "@octokit/auth-oauth-app": "^3.0.2",
    "@octokit/core": "^2.5.0",
    "@octokit/oauth-app": "^1.1.0",
    "@octokit/rest": "^17.6.0",
    "express": "^4.17.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "license": "MIT",
  "contributes": {
    "configuration": {
      "title": "GitHub Repository Manager",
      "properties": {
        "githubRepoMgr.saveToken": {
          "type": "boolean",
          "default": true,
          "description": "Saves the token (OAuth or Personal access token) in a internal file. You shouldn't use this if your account has important repositories, as it isn't too hard to a malicious application or even another extension to retrieve the token. Remember you can delete a token of yours at any time in your GitHub settings web page."
        }
      }
    },
    "commands": [
      {
        "command": "githubRepoMgr.repos.openWebPage",
        "title": "Open Repository Web Page in Browser"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "githubRepoMgr",
          "title": "GitHub Repository Loader",
          "icon": "src/github-logo.svg"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "githubRepoMgr.repos.openWebPage"
        }
      ]
    },
    "views": {
      "githubRepoMgr": [
        {
          "id": "githubRepoMgr.views.account",
          "name": "Account"
        },
        {
          "id": "githubRepoMgr.views.repositories",
          "name": "Repositories"
        }
      ]
    }
  }
}
