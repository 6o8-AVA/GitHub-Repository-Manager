{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/semi": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "@typescript-eslint/no-use-before-define": "off"
  }
}